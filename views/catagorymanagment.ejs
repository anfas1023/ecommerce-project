    const catagoryname=document.getElementById("username");
    const catagorydescription=document.getElementById("text");

    const addCategoryData = {
      catagoryname:catagoryname.value,
      catagorydescription: catagorydescription.value,
    };

    
    const response = await fetch("/addcatagory", {
      method: "POST",
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify(addCategoryData),
    });

    if(response.status===400){
      alert("Catagory name already exit");
    }else{
      window.location.reload();
    }



  })


  function showToast() {
    const toastContainer = document.getElementById('toast-container');

    const toast = document.createElement('div');
    toast.classList.add('toast', `bg-danger`, 'text-light');
    toast.setAttribute('role', 'alert');
    toast.setAttribute('aria-live', 'assertive');
    toast.setAttribute('aria-atomic', 'true');

    const toastBody = document.createElement('div');
    toastBody.classList.add('toast-body');
    toastBody.textContent = "catagory name already name Already exits";

    toast.appendChild(toastBody);
    toastContainer.appendChild(toast);

    const bsToast = new bootstrap.Toast(toast);
    bsToast.show();

    // Remove the toast after a few seconds (adjust the delay as needed)
    setTimeout(() => {
        toast.remove();
    }, 5000);
}



  
