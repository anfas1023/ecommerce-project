<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Signup</title>
    <style>
        /* Reset default styles */
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
        }

        /* Container for the signup form */
        .container {
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            max-width: 400px;
            margin: 0 auto;
            padding: 20px;
            margin-top: 20px;
        }

        /* Form styling */
        h2 {
            text-align: center;
        }

        form {
            display: flex;
            flex-direction: column;
        }

        label {
            margin-bottom: 5px;
        }

        input[type="text"],
        input[type="email"],
        input[type="password"],
        input[type="tel"] {
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 3px;
            font-size: 16px;
        }

        button[type="submit"] {
            background-color: #007bff;
            color: #fff;
            padding: 10px;
            border: none;
            border-radius: 3px;
            cursor: pointer;
            font-size: 18px;
            transition: background-color 0.3s;
        }

        button[type="submit"]:hover {
            background-color: #0056b3;
        }

        /* Media queries for responsiveness */
        @media (max-width: 600px) {
            .container {
                max-width: 100%;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Edit product</h2>

        <form action="/editproduct/<%= product._id %>" id="edit-product" class="btn btn-primary" product-id="<%= product._id %>" product-name="<%=  product.productname  %>" product-price="<%= product.productprice %>" product-description="<%= product.productdescription %>" product-stocks="<%= product.productstocks %>" product-catagory="<%= product.productcatagory %>" product-image="<%= product.productimage %>" method="POST" enctype="multipart/form-data" >


                <label for="username">Productname</label>
                <input type="text" id="username" name="productname" required>

                <label for="number">productprice</label>
                <input type="number" id="number" name="productprice" required>

            <label for="text">productdescription</label>
            <input type="text" id="description" name="productdescription" required>

                <label for="stocks">productstocks</label>
                <input type="text" id="stocks" name="productstocks" required>


                <label for="catagory">productcatagory</label>
                <input type="text" id="catagory" name="productcatagory" required>


                <div id="parent">
                    <label for="image">Productimage</label>
                    <input type="file" id="image" name="filename" required>

                </div>

                <button type="submit">edit product</button>
        </form>
    </div>
    <script>
        const edit=document.querySelector("#edit-product")
        const username=edit.getAttribute("product-name")
        const price=edit.getAttribute("product-price")
        const description=edit.getAttribute("product-description")
        const stocks=edit.getAttribute("product-stocks");
        const catagory=edit.getAttribute("product-catagory");
        const IMAGE=edit.getAttribute("product-image")
        


        document.getElementById("username").value=username
        document.getElementById("number").value=price
        document.getElementById("description").value=description
        document.getElementById("stocks").value=stocks
        document.getElementById("catagory").value=catagory

        const image=document.getElementById("image")
       
      image.addEventListener("change", () => {
    const reader = new FileReader();
    reader.onload = function (e) {
        const parent = document.getElementById("parent");
        const displayedImage = document.getElementById("newone"); 

        if (displayedImage) {
            parent.removeChild(displayedImage); 
        }

        const newImage = document.createElement("img"); 
        newImage.src = e.target.result;
        newImage.id ="newone"
        parent.appendChild(newImage);
    };
    reader.readAsDataURL(image.files[0]);
});


       
        

    </script>
</body>
</html>