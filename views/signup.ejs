<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>DarkPan - Bootstrap 5 Admin Template</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <link href="img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Roboto:wght@500;700&display=swap" rel="stylesheet"> 

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="/admin/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="/admin/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" >

    <!-- Customized Bootstrap Stylesheet -->
    <link href="admin/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="admin/css/style.css" rel="stylesheet">
</head>

<body>
    <div class="container-fluid position-relative d-flex p-0">
        <!-- Spinner Start -->
        <div id="spinner" class="show bg-dark position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <!-- Spinner End -->


        <!-- Sign Up Start -->
        <div class="container-fluid">
            <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
                <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
                    <div class="bg-secondary rounded p-4 p-sm-5 my-4 mx-3">
                        <div class="d-flex align-items-center justify-content-between mb-3">
                            <a href="index.html" class="">
                                <h3 class="text-primary"><i class="fa fa-user-edit me-2"></i>Bcart</h3>
                            </a>
                            <h3>Sign Up</h3>
                        </div>
                        <form action="/signup" method="POST" onsubmit="return validateform()">
                        <div class="form-floating mb-3">
                            <input type="text" id="username" name="username" class="form-control" placeholder="Username" required>
                            <label for="floatingText">Username</label>
                            <span class="error" id="username-error"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="email" id="email" name="email" class="form-control" placeholder="Email" required>
                            <label for="floatingInput">Email address</label>
                            <span class="error" id="email-error"></span>
                        </div>
                        <div class="form-floating mb-4">
                            <input type="password" id="password" class="form-control"  name="password" placeholder="password" required>
                            <label for="floatingPassword">Password</label>
                            <span class="error" id="password-error"></span>
                        </div>
                        <div class="form-floating mb-4">
                            <input type="password" id="confirmpassword"  class="form-control"  name="confirmpassword" placeholder="confirmpassword" required>
                            <label for="floatingPassword">confirmpassword</label>
                            <span class="error" id="confirmpassword-error"></span>
                        </div>
                        <div class="form-floating mb-4">
                            <input type="tel" id="phone" class="form-control" name="phone" placeholder="phone" required>
                            <label for="floatingPassword">phone</label>
                            <span class="error" id="phone-error"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input type="text" id="referral" class="form-control" name="referralCode" placeholder="Referral Code">
                            <label for="floatingPassword">Referral Code</label>
                            <span class="error" id="referral-error"></span>
                        </div>
                        
                        <!-- <div class="form-floating mb-4">
                            <input type="tel" id="refral" class="form-control" name="referralCode" placeholder="phone" required>
                            <label for="floatingPassword">phone</label>
                            <span class="error" id=""></span>
                        </div> -->
                        <button type="submit" class="btn btn-primary py-3 w-100 mb-4">Sign Up</button>
                        <p><%= message %></p>
                    </form>
                     <p class="text-center mb-0">Already have an Account? <a href="/login">Sign In</a></p>
                    </div>
                </div>
            </div>
        </div>
        <!-- Sign Up End -->
    </div>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
 <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
 <script src="/admin/lib/chart/chart.min.js"></script>
 <script src="/admin/lib/easing/easing.min.js"></script>
 <script src="/admin/lib/waypoints/waypoints.min.js"></script>
 <script src="/admin/lib/owlcarousel/owl.carousel.min.js"></script>
 <script src="/admin/lib/tempusdominus/js/moment.min.js"></script>
 <script src="/admin/lib/tempusdominus/js/moment-timezone.min.js"></script>
 <script src="/admin/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

 <!-- Template Javascript -->
 <script src="/admin/js/main.js"></script>
 <script>
    function validateform(){
        // get the elements
        const username = document.getElementById("username").value;
        const email = document.getElementById("email").value;
        const password = document.getElementById("password").value;
        const confirmpassword = document.getElementById("confirmpassword").value;

        // Initialize a flag to check form validity
        let isValid = true;
        console.log(isValid);

        // Check the username
        if (username.trim() === "" || !isNaN(username) || username.indexOf(" ")!==-1) {
            document.getElementById("username-error").textContent = "Invalid username";
            isValid = false;
        } else {
            document.getElementById("username-error").textContent = "";
        }

        // Check the email
        if (email.trim() === "" || !email.includes("@")) {
            document.getElementById("email-error").textContent = "Invalid email";
            isValid = false;
        } else {
            document.getElementById("email-error").textContent = "";
        }

        // Check the password
        if (password.trim() === "" || password.length < 8) {
            document.getElementById("password-error").textContent = "Password must be at least 8 characters";
            isValid = false;
        } else {
            document.getElementById("password-error").textContent = "";
        }

        // Check the confirmation password
        if (confirmpassword !== password) {
            document.getElementById("confirmpassword-error").textContent = "Passwords do not match";
            isValid = false;
        } else {
            document.getElementById("confirmpassword-error").textContent = "";
        }

        // Check the phone number
        const phone = document.getElementById("phone").value;
        if (phone.trim() === "" || isNaN(phone) || phone.length < 10 || phone.length>=11) {
            document.getElementById("phone-error").textContent = "Invalid phone number";
            isValid = false;
        } else {
            document.getElementById("phone-error").textContent = "";
        }

        return isValid;
    }
</script>
</body>

</html>