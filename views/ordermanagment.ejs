      <% if (orders
      ) { %>
        <table class="table">
            <thead class="thead-light">
              <tr>
                <th scope="col">Productname</th>
                <th scope="col">productprice</th>
                <th scope="col">productquantity</th>
                <th scope="col">productcutumername</th>
                <th scope="col">productotalprice</th>
                <th scope="col">productimage</th>
                <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody>
                <% allProducts.forEach(product => { %>
                    <tr>
                        <td><%= product.productName %></td>
                        <td><%=  product.price  %></td>
                        <td><%=  product.quantity  %></td>
                        <td><%=  product.customerName  %></td>
                        <td><%=  product.totalPrice %></td>
                        <td><%=  product.orderDate %></td>
                        <td><img src="/uploads/<%= product.imageUrl %>" alt="this is imagae" width="110px" height="150px" ></td>
                        <td> <select class="form-select status-select" id="Status"  name="Order" data-order-id="<%= product.orderId %>">
                            <option  value="<%=  product.orderStatus  %>"><%=  product.orderStatus  %></option>
                      <option  value="pending">pending</option>
                      <option  value="Deleivered">Delivered</option>
                      <option  value="Shipped">Shipped</option>
                      <option  value="Cancel">Cancel</option>
                  </select></td>
                      </tr>

                <% }) %>


              </tbody>
            </table>
      <% } %>


      <script>
    const selectElements = document.querySelectorAll('.status-select');
    selectElements.forEach(selectElement => {
        selectElement.addEventListener('change', (event) => {
            const orderid = event.target.getAttribute('data-order-id');
            const selectedStatus = event.target.value;
            // const selectedStatus=document.getElementById('Status').value
            console.log(`Order ID: ${orderid}, Selected Status: ${selectedStatus},${event.target}`);
            fetch(`/statusorder/${orderid}/${selectedStatus}`,{
                method:'post'
            }).then((response)=>{
                if(response.ok){
                    window.location.reload();
                }else{
                    console.log("cannot reload");
                }
            }).catch((error)=>{
                console.log("cannot fetch the data")
            })
        });
    });
    </script>
