<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OTP</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        OTP Login
                    </div>
                    <div class="card-body">
                        <form action="/otp" method="post">

                                <label for="otp">Enter OTP</label>
                                <input type="text" id="otp" class="form-control" placeholder="Enter OTP" name="otp">

                            <button type="submit" class="btn btn-success mt-3" id="verifyOTP">Verify OTP</button>
                        </form>
                    </div>
                    <p><%= message %></p>
                    <form action="/otpresend" method="post">

                        <button type="submit" class="btn btn-primary" id="resendBtn" style="display: none;">Resend OTP</button>

                    </form>


                    <p> Resend OTP in <span id="countdowntimer"> </span> Seconds</p>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script>
    //     var timeleft = 30;
    // var downloadTimer = setInterval(function(){
    // timeleft--;
    // document.getElementById("countdowntimer").textContent = timeleft;
    // if(timeleft <= 0)
    //     clearInterval(downloadTimer);
    // },10000);

    window.onload = () => {
    var timeleft = 30;
    var countdownTimer = document.getElementById("countdowntimer");

    var interval = setInterval(() => {
        timeleft--;
        countdownTimer.textContent = timeleft; 
        if (timeleft <= 0) {
            clearInterval(interval);
            resendBtn.style.display = "block";
        }
    }, 1000);
};


    
    </script>
</body>
</html>